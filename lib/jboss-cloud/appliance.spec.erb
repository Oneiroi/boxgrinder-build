Summary: 	<%= summary %>
Name:  		<%= name %>
Version: 	<%= version %>
Release: 	<%= release %>

Group:  	Applications/Internet
License: 	LGPLv2+
URL: 	    http://oddthesis.org/
Source0: 	<%= name %>-<%= version_with_release %>.tar.gz
BuildArch: 	noarch
<% for package in packages %>
Requires:       <%= package %>
<% end %>
# The following are required to run within EC2
Requires: 	curl
Requires: 	rsync

%description
<%= summary %>

%prep
%setup -n <%= name %>-<%= version_with_release %> 

%install
rm -rf $RPM_BUILD_ROOT

install -d -m 755 $RPM_BUILD_ROOT/usr/share/%{name}/sources
cp -R * $RPM_BUILD_ROOT/usr/share/%{name}/sources

%post
/bin/echo "appliance_name: <%= name %>" > /etc/jboss-cloud
/bin/echo "APPLIANCE_NAME=<%= name %>" >> /etc/sysconfig/jboss-cloud

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
/

